zmq::amqp_marshaller_t::~amqp_marshaller_t ()
{
    //  Deallocate bodies of the commands stored in the command queue.
    //  This won't get done automatically!
    while (!command_queue.empty ()) {
        free (command_queue.front ().args);
        command_queue.pop ();
